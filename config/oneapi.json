        "properties": {
          "config_name": {
            "type": "string"
          },
          "config_description": {
            "type": "string"
          },
          "config_type": {
            "extensions": {
              "x-is-enum": true
            },
            "$ref": "#/components/schemas/ConfigType"
          },
          "user_id": {
            "type": "string"
          },
          "na": {
            "type": "number",
            "format": "float"
          },
          "wave_length": {
            "type": "number",
            "format": "float"
