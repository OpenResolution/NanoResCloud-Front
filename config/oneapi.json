        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ConfigItem"
            }
          },
          "total": {
            "type": "integer",
            "format": "int32"
          },
          "success": {
            "type": "boolean"
          }
